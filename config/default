server
{
	listen			localhost
	server_name		webserv

	location / {
		root			www
		rewrite			/redirect.html /index.html
		default_file	index.html
		limit_except	GET POST DELETE
		autoindex		off
	}

	location /www/ {
		autoindex	off
	}

	location /www/subject.pdf {
		autoindex	on
	}
}

server{
	listen					127.0.0.1:25565
	server_name				second_server lol thisiswebserv
	client_body_buffer_size	4200
	error_page				404	/error-404.html
}
