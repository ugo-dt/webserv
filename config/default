server
{
	listen			localhost:8080
	server_name		webserv.com test
	client_body_buffer_size	4

	location / {
		autoindex		on
		limit_except	GET
	}

	location /www/
	{
		autoindex		on
		upload_path		/www/upload/
		rewrite			/www/redirect.html	/www/index.html
		limit_except	GET POST
	}

	location /www/cgi-bin/ {
		autoindex		on
		limit_except	GET
		cgi				.py		/opt/homebrew/bin/python3
		cgi				.php	/opt/homebrew/bin/php
	}

	location /www/upload/ {
		autoindex		on
		limit_except	GET POST DELETE
	}
}

server
{
	listen			localhost:8080
	server_name		listing.com

	location / {
		autoindex		on
	}
}

server{
	listen					127.0.0.1:1234
	client_body_buffer_size	10
	error_page				404	/www/505.html

	location / {
		limit_except GET POST
		autoindex on
	}
}
